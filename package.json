{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "fix:eslint": "eslint --ext .js,.vue resources/js/ --fix",
        "fix:prettier": "prettier --write --loglevel warn 'resources/js/**/*.vue'",
        "fix-code-style": "npm run fix:prettier && npm run fix:eslint",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production && npm run ssr:build",
        "heroku-postbuild": "npm run prod",
        "ssr:build": "mix --production --mix-config=webpack.ssr.mix.js",
        "ssr:serve": "node public/js/ssr.js"
    },
    "dependencies": {
        "@element-plus/icons-vue": "^2.0.9",
        "@inertiajs/inertia": "^0.11.0",
        "@inertiajs/inertia-vue3": "^0.6.0",
        "@inertiajs/progress": "^0.2.7",
        "@inertiajs/server": "^0.1.0",
        "@popperjs/core": "^2.11.0",
        "@vue/babel-preset-jsx": "^1.4.0",
        "@vue/server-renderer": "^3.2.27",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.5",
        "css-loader": "^6.7.1",
        "element-plus": "^2.2.17",
        "eslint": "^8.4.1",
        "eslint-plugin-vue": "^8.2.0",
        "html-webpack-plugin": "^5.5.0",
        "laravel-mix": "^6.0.41",
        "lodash": "^4.17.21",
        "postcss": "^8.4.4",
        "postcss-import": "^12.0.1",
        "postcss-nesting": "^7.0.1",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwind": "^2.2.12",
        "style-loader": "^3.3.1",
        "tailwindcss": "^2.0.3",
        "uuid": "^8.3.2",
        "vue": "^3.2.27",
        "webpack-node-externals": "^3.0.0"
    },
    "devDependencies": {
        "@babel/plugin-syntax-jsx": "^7.18.6",
        "@vue/babel-helper-vue-jsx-merge-props": "^1.4.0",
        "@vue/babel-plugin-transform-vue-jsx": "^1.4.0",
        "laravel-echo": "^1.14.0",
        "pusher-js": "^7.4.0",
        "vue-loader": "^17.0.0",
        "vue-template-compiler": "^2.7.13"
    }
}
